<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.livroandroid.psnice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_psnice"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_psnice"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LogarComIdActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.CadastroActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.DetalheJogoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.DetalheTrofeuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activity.DetalheUsuarioActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>